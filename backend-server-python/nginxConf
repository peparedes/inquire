server {
    listen 80;
    listen [::]:80;
    server_name inquire.ai;
    return 301 https://$server_name$request_uri;
}

server {
	listen 443 default_server;

	ssl on;
	ssl_certificate /etc/letsencrypt/live/inquire.ai/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/inquire.ai/privkey.pem;

	server_name inquire.ai;

	root /var/inquire/inquire.ai/inquire-frontend/app;
	index index.html;


	location / {
		try_files $uri;
	}

	location /api {
		include uwsgi_params;
		uwsgi_pass unix:/tmp/inquire.sock;
	}
}
