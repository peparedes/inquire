    "bcrypt": "^1.0.3",
    "commonmark": "^0.28.1",
    "core-js": "^2.5.1",
    "fs": "0.0.1-security",
    "handlebars": "^4.0.10",
    "install": "^0.10.2",
    "jquery": "^2.2.4",
    "jquery-validation": "^1.17.0",
    "juice": "^4.1.1",
    "lodash": "^4.17.4",
    "meteor-node-stubs": "^0.2.11",
    "npm": "^5.5.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.2",
    "react-addons-pure-render-mixin": "^15.6.0",
    "react-bootstrap": "^0.31.5",
    "react-bootstrap-table": "^4.2.0",
    "react-dom": "^15.6.2",
